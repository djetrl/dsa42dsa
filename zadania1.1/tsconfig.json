{
  "compilerOptions": {

    "target": "ES5",                                 
    "lib": ["es6","dom"],                    
    "module": "commonjs",                              
    "rootDir": "src",                                    
    "resolveJsonModule": true,                          
    "outDir": "dist",                                    
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

  },
  "files": ["./node_modules/@types/node/index.d.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types"]

}
